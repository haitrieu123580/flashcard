{
   "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "typeRoots" : ["node_modules/@types", "src/types"],
      "paths": {
         "@src/*": [
            "src/*"
          ],
         "@routers/*": [
            "src/routers/*"
         ],
         "@services/*": [
            "src/services/*"
         ],
         "@repositories/*": [
            "src/repositories/*"
         ],
         "@controllers/*": [
            "src/controllers/*"
         ],
         "@entity/*": [
            "src/entity/*"
         ],
         "@middleware/*": [
            "src/middleware/*"
         ],
         "@dto/*": [
            "src/dto/*"
         ],
         "@helper/*": [
            "src/helper/*"
         ],
      }
   },
   "include": [
      "src/**/*.ts",
      "types/**/*.d.ts",
      "src/types/images.d.ts",
   ],
   "exclude": ["node_modules", "dist"]
}